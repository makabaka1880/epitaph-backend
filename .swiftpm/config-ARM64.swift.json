{
    "tools": {
        "swiftc": {
            "target": "aarch64-unknown-linux-gnu",
            "extraSwiftcFlags": [
                "-sdk", "/usr/aarch64-linux-gnu"
            ],
            "extraCFlags": [
                "--sysroot=/usr/aarch64-linux-gnu"
            ],
            "extraCPPFlags": [
                "--sysroot=/usr/aarch64-linux-gnu"
            ],
            "extraLinkerFlags": [
                "--sysroot=/usr/aarch64-linux-gnu",
                "-ljemalloc"
            ]
        }
    }
}
